<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lforestor.myapplication.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@null"
        android:theme="@style/AppTheme">
        <activity android:name="com.lforestor.myapplication.android.view.ResultActivity"
            android:configChanges="orientation"
            android:screenOrientation="userPortrait"></activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/App_ID" />
        <activity android:name="com.lforestor.myapplication.android.view.MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="orientation"
            android:screenOrientation="userPortrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>